# =============================================================================
# Agent OS Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment
# All variables are optional with sensible defaults

# =============================================================================
# Server Settings
# =============================================================================

# HTTP port for the web interface
AGENT_OS_WEB_PORT=8080

# Bind address (127.0.0.1 for local only; use 0.0.0.0 only behind a reverse proxy)
AGENT_OS_WEB_HOST=127.0.0.1

# Enable debug mode (disable in production)
AGENT_OS_WEB_DEBUG=false

# Data storage directory (inside container)
AGENT_OS_DATA_DIR=/app/data

# =============================================================================
# Authentication
# =============================================================================

# Require authentication for API access (ENABLED BY DEFAULT for security)
AGENT_OS_REQUIRE_AUTH=true

# API key for authentication (REQUIRED when AGENT_OS_REQUIRE_AUTH=true)
# Generate a secure key with one of these commands:
#   openssl rand -base64 32
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#   python -c "from src.web.config import generate_api_key; print(generate_api_key())"
#
# SECURITY: Uncomment and set before deployment!
# The application will fail to start if auth is enabled without a key.
# AGENT_OS_API_KEY=your-secure-api-key-here

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable rate limiting (recommended for production)
AGENT_OS_RATE_LIMIT_ENABLED=true

# Maximum requests per minute per client
AGENT_OS_RATE_LIMIT_PER_MINUTE=60

# Maximum requests per hour per client
AGENT_OS_RATE_LIMIT_PER_HOUR=1000

# Rate limiting algorithm: fixed_window, sliding_window, token_bucket
AGENT_OS_RATE_LIMIT_STRATEGY=sliding_window

# Use Redis for distributed rate limiting (required for multi-instance)
AGENT_OS_RATE_LIMIT_REDIS=true

# Redis connection URL
AGENT_OS_REDIS_URL=redis://redis:6379

# =============================================================================
# Voice Features (Speech-to-Text / Text-to-Speech)
# =============================================================================

# Enable speech-to-text
AGENT_OS_STT_ENABLED=true

# STT engine: auto, whisper, whisper_api, mock
AGENT_OS_STT_ENGINE=auto

# Whisper model size: tiny, base, small, medium, large
AGENT_OS_STT_MODEL=base

# STT language code
AGENT_OS_STT_LANGUAGE=en

# Enable text-to-speech
AGENT_OS_TTS_ENABLED=true

# TTS engine: auto, piper, espeak, mock
AGENT_OS_TTS_ENGINE=auto

# TTS voice name
AGENT_OS_TTS_VOICE=en_US-lessac-medium

# TTS speech rate (1.0 = normal speed)
AGENT_OS_TTS_SPEED=1.0

# =============================================================================
# Boundary Security Settings
# =============================================================================

# Allow network access to local AI backend (Ollama)
# Set to false to block all network access from the chat interface
AGENT_OS_BOUNDARY_NETWORK_ALLOWED=true

# =============================================================================
# Monitoring (Prometheus & Grafana)
# =============================================================================

# Prometheus web UI port
PROMETHEUS_PORT=9090

# Grafana web UI port
GRAFANA_PORT=3000

# Grafana admin credentials
# SECURITY: You MUST set a strong password before deployment!
GRAFANA_ADMIN_USER=admin
# REQUIRED: Generate a secure password with: openssl rand -base64 32
# GRAFANA_ADMIN_PASSWORD=
